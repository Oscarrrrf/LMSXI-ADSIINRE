<xs:simpleType name="nombreCorto">
  <xs:restriction base="xs:string">
    <xs:maxLength value="15"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="login">
  <xs:restriction base="xs:string">
    <xs:minLength value="6"/>
    <xs:maxLength value="12"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="codcliente">
  <xs:restriction base="xs:string">
    <xs:length value="8"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="edad">
  <xs:restriction base="xs:integer">
    <xs:minInclusive value="0"/>
    <xs:maxInclusive value="3"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="tipoCiclo">
  <xs:restriction base="xs:string">
    <xs:enumeration value="basico"/>
    <xs:enumeration value="medio"/>
    <xs:enumeration value="superior"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="numtelefono">
  <xs:restriction base="xs:string">
    <xs:pattern value="[0-9]{3} [0-9]{2}-[0-9]{2}-[0-9]{2}"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="direccion">
  <xs:restriction base="xs:string">
    <xs:pattern value="[^\t\n ]+( [^\t\n ]+)*"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="codCliente">
  <xs:restriction base="xs:string">
    <xs:pattern value="[A-Za-z0-9]{8}"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="matricula">
  <xs:restriction base="xs:string">
    <xs:pattern value="[0-9]{4}[A-Za-z]{3}"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="listaMatriculas">
  <xs:list itemType="matricula"/>
</xs:simpleType>

<xs:simpleType name="identificadorPersonal">
  <xs:restriction base="xs:string">
    <xs:pattern value="([A-Za-z]{3}[0-9]{7})|([0-9]{8}[A-Za-z])|([0-9]{8})"/>
  </xs:restriction>
</xs:simpleType>